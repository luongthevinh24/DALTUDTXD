<Window x:Class="_67TH3_LTUDTXD_HUCE_20_DuongThiDuyen_0257867_67TH3.Views.TrangDangNhap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_67TH3_LTUDTXD_HUCE_20_DuongThiDuyen_0257867_67TH3.Views" 
             xmlns:vm="clr-namespace:_67TH3_LTUDTXD_HUCE_20_DuongThiDuyen_0257867_67TH3.ViewModels"
             mc:Ignorable="d" 
             Title="TrangDangNhap" Height="550" Width="800"
             WindowStyle ="None"
             ResizeMode="NoResize"
             WindowStartupLocation="CenterScreen"
             MouseDown="Window_MouseDown"
             AllowsTransparency="True">
    
    <Window.DataContext>
        <vm:ChucNang />
    </Window.DataContext>
    

    <Border>
        <Border.Background>
            <ImageBrush ImageSource ="/Resources/Images/back1.jpg"
                         Stretch="None"/>
        </Border.Background>

        <Border CornerRadius="10"       
                BorderThickness="1"
                Opacity ="0.95"
                Width="500"
                Height="500">

            <Border.Background>
                <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                    <GradientStop Color="white" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>

                    </Grid.ColumnDefinitions>

                    <TextBlock Text="TRANG ĐĂNG NHẬP"
                               Foreground="DarkGray"
                               FontSize="10"
                               FontFamily="Segoe UI"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                    
                    <Button x:Name="btnMinimize"                            
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Segoe UI"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimize_Click">
                        <Button.Style>
                            <Style  TargetType="Button">
                                <Setter Property="Background" Value="#105FAD"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnClose"                      
                             BorderThickness="0"
                             Content="X"
                             Foreground="White"
                             FontSize="12"                           
                             FontFamily="Segoe UI"
                             Cursor="Hand"
                             Grid.Column="2"
                             Click="btnClose_Click">

                        <Button.Style>
                            <Style  TargetType="Button">
                                <Setter Property="Background" Value="IndianRed"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#105FAD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </Grid>
                <StackPanel Width="256"
                            Grid.Row="2"
                            Orientation="Vertical">
                    <Image Source="/Resources/Images/logo.png"
                           Width="150" Height="150"/>

                    <TextBlock Text="ĐĂNG NHẬP"
                               Foreground="#105fad"
                               FontSize="23"
                               Margin="0,-25,0,0"
                               FontWeight="Medium"
                               FontFamily="Segoe UI"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Tên đăng nhập"
                               Foreground="#105fad"
                               FontSize="13"
                               FontWeight="Medium"
                               FontFamily="Segoe UI"                              
                               Margin="0,40,0,0"/>

                    <TextBox x:Name="txtUser"
                             FontSize="13"
                             FontFamily="Segoe UI"
                             Background="Transparent"
                             FontWeight="Medium"
                             Foreground="Black"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="5,0,0,0"
                             Text="{Binding TaiKhoan, UpdateSourceTrigger=PropertyChanged}"/>



                    <TextBlock Text="Mật khẩu"
                               Foreground="#105fad"
                               FontSize="13"
                               FontWeight="Medium"
                               FontFamily="Segoe UI"                              
                               Margin="0,35,0,0"/>

                    <local:BindingPasswordBox
                             MatKhau="{Binding MatKhau, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>


                    <Grid>
                        <Button x:Name="Dangnhap"                      
                                BorderThickness="0"
                                Content="ĐĂNG NHẬP"
                                Foreground="White"
                                FontSize="12"                           
                                FontFamily="Segoe UI"
                                Cursor="Hand"
                                Grid.Column="2"
                                Margin="0,50,-120,0"
                             
                            Command="{Binding DangNhapTaiKhoan}">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#105FAD"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#28AEED"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="100" Height="40"
                    CornerRadius="20"
                    Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="DangKy"                      
                                 BorderThickness="0"
                                 Content="ĐĂNG KÝ"
                                 Foreground="White"
                                 FontSize="12"                           
                                 FontFamily="Segoe UI"
                                 Cursor="Hand"
                                 Grid.Column="2"
                                 Margin="0,50,120,0"
                                 Command="{Binding ChuyenDenTrangDangKy}">

                            <Button.Style>
                                <Style  TargetType="Button">
                                    <Setter Property="Background" Value="#105FAD"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#28AEED"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="100" Height="40"
                    CornerRadius="20"
                    Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>

                    

                </StackPanel>
            </Grid>
            
            
        </Border>
    </Border>

</Window>
    
    
    

